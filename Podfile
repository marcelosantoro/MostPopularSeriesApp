# Uncomment the next line to define a global platform for your project
platform :ios, '9.0'

target 'MostPopularSeriesApp' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for MostPopularSeriesApp
  
  # Network Connection
  pod 'Alamofire', '~> 4.7'

  # Easy JSON
  pod 'SwiftyJSON', '~> 4.0' 

  # Image Caching 
  pod 'Kingfisher', '~> 4.0'

  # StatusBar Messages
  pod 'SwiftMessages'

  target 'MostPopularSeriesAppTests' do
    inherit! :search_paths
    # Pods for testing
  end

end
